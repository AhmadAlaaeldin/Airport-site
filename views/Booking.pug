doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
  title Booking Air port
  // Google font
  link(href='https://fonts.googleapis.com/css?family=PT+Sans:400' rel='stylesheet')
  // Bootstrap
  link(type='text/css' rel='stylesheet' href='bootstrap.min.css')
  // Custom stlylesheet
  link(type='text/css' rel='stylesheet' href='stylesbooking.css')
  // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
  // WARNING: Respond.js doesn't work if you view the page via file://
  //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
#booking.section
  .section-center
    .container
      .row
        .booking-form
          form(action='/results' method='POST')
            .form-group
              .form-checkbox
                label(for='roundtrip')
                  input#roundtrip(type='radio' name='flight-type')
                  span
                  | Roundtrip
                label(for='one-way')
                  input#one-way(type='radio' name='flight-type')
                  span
                  | One way
                label(for='multi-city')
                  input#multi-city(type='radio' name='flight-type')
                  span
                  | Multi-City
            .row
              .col-md-6
                .form-group
                  span.form-label Flying from
                  input.form-control(type='text' name='airport-from' placeholder='City or airport')
              .col-md-6
                .form-group
                  span.form-label Flyning to
                  input.form-control(type='text' name='airport-to' placeholder='City or airport')
            .row
              .col-md-3
                .form-group
                  span.form-label Departing
                  input.form-control(name='dept-date' type='date' required='')
              .col-md-3
                .form-group
                  span.form-label Returning
                  input.form-control(name='return-date' type='date' required='')
              .col-md-2
                .form-group
                  span.form-label Adults (18+)
                  select.form-control
                    option 1
                    option 2
                    option 3
                  span.select-arrow
              .col-md-2
                .form-group
                  span.form-label Children (0-17)
                  select.form-control
                    option 0
                    option 1
                    option 2
                  span.select-arrow
            .row
              .col-md-3
                .form-group
                  span.form-label Travel class
                  select.form-control
                    option Economy class
                    option Business class
                    option First class
                  span.select-arrow
              .col-md-3
                .form-btn
                  button.submit-btn(type='submit') search
